<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.Join_buy">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/et_id2"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="82dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_register_sell2"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="504dp"
            android:text="회원가입"
            app:layout_constraintEnd_toEndOf="@+id/et_address2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_address2"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_pass2"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="132dp"
            android:ems="10"
            android:hint="패스워드"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/et_id2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_id2"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_passcheck2"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="204dp"
            android:ems="10"
            android:hint="패스워드 확인"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/et_pass2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_pass2"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_name2"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="276dp"
            android:ems="10"
            android:hint="이름"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/et_passcheck2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_passcheck2"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_phone2"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="344dp"
            android:ems="10"
            android:hint="전화번호"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="@+id/et_name2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_name2"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_address2"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="416dp"
            android:ems="10"
            android:hint="주소"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/et_phone2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_phone2"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>