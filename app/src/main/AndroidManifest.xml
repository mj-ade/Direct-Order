            android:name=".ui.login.Login_sell"
            android:label="@string/title_activity_login_sell" />
        <activity
            android:name=".MainForSeller"
            android:label="@string/app_name"
            android:theme="@style/Theme.DirectOrder.NoActionBar" />
        <activity
            android:name=".intro.IntroActivity"
            android:theme="@style/Theme.DirectOrder.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".register.Join"
            android:label="@string/app_name"
            android:theme="@style/Theme.DirectOrder.NoActionBar" />
        <activity
            android:name=".register.Join_buy"
            android:label="@string/app_name"
            android:theme="@style/Theme.DirectOrder.NoActionBar" />
        <activity
            android:name=".Main_who"
            android:label="@string/app_name"
            android:theme="@style/Theme.DirectOrder.NoActionBar" />
        <activity
            android:name=".register.Register_Shop"
            android:label="@string/app_name"
            android:theme="@style/Theme.DirectOrder.NoActionBar" />

        <activity
            android:name=".productorder.ProductOrderActivity"
