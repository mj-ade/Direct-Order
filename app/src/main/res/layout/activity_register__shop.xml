<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reg_shop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.Register_Shop">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/fragment_test">

            <EditText
                android:id="@+id/txt_shopname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="101dp"
                android:layout_marginRight="101dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="마켓명"
                />

            <RadioGroup
                android:id="@+id/radio_product"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:text="상품 종류" />

                <RadioButton
                    android:id="@+id/radioButton_cake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="케이크" />


                <RadioButton
                    android:id="@+id/radioButton_case"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="케이스" />

                <RadioButton
                    android:id="@+id/radioButton_acc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="악세사리" />

                <RadioButton
                    android:id="@+id/radioButton_etc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ETC" />

            </RadioGroup>
            <RadioGroup
                android:id="@+id/editable"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txt_edit"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:text="고객 상품 직접 지정 가능 여부" />

            <RadioButton
                android:id="@+id/possible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가능" />
                <RadioButton
                    android:id="@+id/impossib"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="불가능" />
            </RadioGroup>

            <EditText
                android:id="@+id/txt_shopnum"
                android:layout_width="243dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="전화번호"
                android:inputType="phone" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
              >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_instagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Instagram ID"
                    android:textColor="#230E0E" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마켓 대표 이미지"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/image_shop"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/photo"
                android:layout_margin="20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_shop_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="주소"
                    android:textColor="#230E0E" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout3"
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_shop_acc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="계좌번호"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:textColor="#230E0E" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/gray"
                android:text="완료"
                android:textColor="@color/yellow" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>