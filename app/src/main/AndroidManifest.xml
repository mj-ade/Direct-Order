<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.direct_order" >
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"

        >

        <activity
            android:name=".MainForCustomer"
            android:label="@string/title_activity_main_for_customer"/>


        <activity
            android:name=".ui.login.Login_buy"
            android:label="@string/title_activity_login_buy" />
        <activity
            android:name=".ui.login.Login_sell"
            android:label="@string/title_activity_login_sell" />
        <activity
            android:name=".MainForSeller"
            android:label="@string/app_name"
            android:theme="@style/Theme.DirectOrder.NoActionBar" />
        <activity
            android:name=".intro.IntroActivity"
            android:theme="@style/Theme.DirectOrder.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".register.Join"
            android:label="@string/app_name"
            android:theme="@style/Theme.DirectOrder.NoActionBar" />
        <activity
            android:name=".register.Join_buy"
            android:label="@string/app_name"
            android:theme="@style/Theme.DirectOrder.NoActionBar" />
        <activity
            android:name=".Main_who"
            android:label="@string/app_name"
            android:theme="@style/Theme.DirectOrder.NoActionBar" />
        <activity
            android:name=".register.Register_Shop"
            android:label="@string/app_name"
            android:theme="@style/Theme.DirectOrder.NoActionBar" />

        <activity
            android:name=".ordersheet.OrderSheetActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.DirectOrder.NoActionBar" />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/> <!-- optional (needed if default theme has no action bar) -->

        <activity android:name=".orderlist.OrderDetailActivity"></activity>
        <activity android:name=".orderlist.MessageActivity" />
        <activity android:name=".orderlist.OrderlistActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".reviewlist.ReviewlistActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".writereview.WritereviewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
